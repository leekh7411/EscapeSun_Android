<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:background="@color/colorMyCpText"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/alarm_setting_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_weight="0.5"
            android:background="@android:color/background_light"
            android:gravity="center"
            android:padding="20dp"
            android:text="초과 기준치를 설정 해주세요"
            android:textColor="?attr/editTextColor"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="0.9">

            <Button
                android:id="@+id/alarm_setting_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="0.3"
                android:background="@android:color/background_light"
                android:text="-"
                android:textColor="@color/colorMyStamps"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/alarm_setting_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:padding="10dp"
                android:paddingBottom="5dp"
                android:textColor="?attr/editTextColor"
                android:textSize="18sp"
                tools:text="0" />

            <Button
                android:id="@+id/alarm_setting_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="0.3"
                android:background="@android:color/background_light"
                android:text="+"
                android:textColor="@color/colorMyStamps"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alarm_setting_yes"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/background_light"
                android:padding="5dp"
                android:text="확인" />

            <Button
                android:id="@+id/alarm_setting_no"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/background_light"
                android:padding="5dp"
                android:text="취소" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
